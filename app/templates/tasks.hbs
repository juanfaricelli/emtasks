{{outlet}}

<h1>Tasks</h1>

{{#each model as |task|}}
  <div class="well">
    <h4>{{#link-to 'tasks.edit' task.id}}{{task.title}}{{/link-to}}</h4>
    <small>Due: {{format-date task.date}}</small>
    <p>{{task.description}}</p>
    <button type="button" name="delete" class="btn btn-danger" {{action 'deleteTask' task.id}}>
      Delete
    </button>
  </div>
{{/each}}
