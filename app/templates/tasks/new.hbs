<form class="form">
  <div class="form-group">
    <label for="task">Title</label>
    {{input type="text" name="task" value=title class="form-control" placeholder="Add Task..."}}
    <!-- <input type="text" name="titleTask" class="form-control" placeholder="Add Task..."> -->
  </div>
  <div class="form-group">
    <label for="dueDate">Due Date</label>
    {{input type="date" name="dueDate" value=date class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{textarea name="description" value=description class="form-control" placeholder="Describe Task..."}}
  </div>
  <button {{action 'addTask'}} type="button" name="button" class="btn btn-primary">Submit</button>
</form>
